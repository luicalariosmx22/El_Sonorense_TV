<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sonorense_black"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        android:background="@drawable/header_gradient">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/programming_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programación El Sonorense"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/sonorense_yellow"/>

    </LinearLayout>

    <!-- Current Time -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Programación de Hoy"
        android:textSize="16sp"
        android:textColor="@color/sonorense_orange"
        android:paddingBottom="16dp"
        android:gravity="center"/>

    <!-- Programming List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/programming_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

</LinearLayout>