<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sonorense_orange_dark" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/sonorense_yellow" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sonorense_orange" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sonorense_dark_bg" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
